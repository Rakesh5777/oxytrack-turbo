{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "build-api-contract": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^db:generate", "^build-api-contract"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "dependsOn": ["^db:generate", "^build-api-contract"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  }
}
